<h2>Записаться</h2>
<script type="text/javascript">
    // $('#js-aaa').css('background-color','yellow');
    // $('.js-bbb').css('background-color','black');
    // выполнится после загрузки всей страницы
    $(function (){
        $('#color').simplecolorpicker();
        $('#datetimepicker').datetimepicker();
    });
</script>
<form action="/visit" method="post">
  <%= @send %>
  <div class="mb-3">
    <label>Ваше имя</label>
    <input name="username" type="text" class="form-control js-bbb" placeholder="Введите ваше имя" value="<%=@username %>">
  </div>
  <br/>
  <div class="mb-3">
    <label>Телефон</label>
    <input name="phone" type="text" class="form-control m-control" placeholder="Введите номер телефона" value="<%=@phone %>">
  </div>
  <div class="form-group">
    <label>Когда вас ждать</label>
    <input id="datetimepicker" name="datetime"  type="text" class="form-control" placeholder="Введите дату" value="<%=@datetime %>">
  </div>


  <br/>
  <div class="mb-3">
  <select name="choice_form" class="form-select">
    <option <%= @choice_form == 'Walter White' ? 'selected' : '' %>>Walter White</option>
    <option <%= @choice_form == 'Jessie Pinkman' ? 'selected' : '' %>>Jessie Pinkman</option>
    <option<%= @choice_form == 'Gus Fring' ? 'selected' : '' %>>Gus Fring</option>
  </select>
  </div>
  <br/>
  <div class="form-group">
  <select id="color" name="color">
    <option value="#7bd148">Green</option>
    <option value="#5484ed">Bold blue</option>
    <option value="#a4bdfc">Blue</option>
    <option value="#46d6db">Turquoise</option>
    <option value="#7ae7bf">Light green</option>
    <option value="#51b749">Bold green</option>
    <option value="#fbd75b">Yellow</option>
    <option value="#ffb878">Orange</option>
    <option value="#ff887c">Red</option>
    <option value="#dc2127">Bold red</option>
    <option value="#dbadff">Purple</option>
    <option value="#e1e1e1">Gray</option>
  </select>
  </div>

<br/>
  <button type="submit" class="btn btn-primary">Записаться</button>
</form>



